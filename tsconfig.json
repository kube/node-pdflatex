{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es5", "es2015.promise"],
    "strict": true,
    "types": ["node"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "lib"
  },
  "exclude": ["node_modules", "lib", "src/__tests__"]
}
